# AI-First CRM Backend Configuration

# Environment
ENVIRONMENT=development

# API
API_KEY=your_api_key_here
API_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/quimbi_crm

# AI Services
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Redis (for Celery & Caching)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Scoring Service
SCORING_RECALCULATION_INTERVAL=300  # 5 minutes in seconds
SCORING_CHURN_WEIGHT=3.0
SCORING_VALUE_WEIGHT=2.0
SCORING_URGENCY_WEIGHT=1.5
TOPIC_ALERT_BOOST=5.0

# Draft Generation
DRAFT_CACHE_TTL=3600  # 1 hour in seconds
DRAFT_LLM_PROVIDER=anthropic  # openai or anthropic
DRAFT_MODEL=claude-3-5-sonnet-20241022

# Context Gathering
CONTEXT_MAX_PAST_TICKETS=5
CONTEXT_MAX_RECENT_ORDERS=3
