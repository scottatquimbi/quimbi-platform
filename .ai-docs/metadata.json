  "key_concepts": {
    "affordance": {
      "definition": "A discoverable product feature that players can engage with",
      "examples": ["progression", "combat", "economy", "social"],
      "source": "architecture/AFFORDANCE_BASED_TAXONOMY.md"
    },
    "segment": {
      "definition": "A cluster of players with similar engagement levels within an affordance",
      "examples": ["progression_high", "combat_medium", "economy_low"],
      "source": "implementation/SEGMENT_DISCOVERY_SUMMARY.md"
    },
    "fuzzy_membership": {
      "definition": "Players belong to ALL segments with varying strengths (0.0-1.0)",
      "formula": "membership = exp(-distance² / (2σ²))",
      "source": "architecture/FUZZY_MEMBERSHIP_EXPLAINED.md"
    },
    "granular_events": {
      "definition": "Specific event types required for affordance discovery",
      "examples": ["mission_start", "combat_encounter", "item_crafted"],
      "required": true,
      "source": "analysis/RAILWAY_TEST_DATA_ANALYSIS.md"
    },
    "aggregated_events": {
      "definition": "Summary statistics that cannot be used for affordance discovery",
      "examples": ["daily_activity"],
      "compatible": false,
      "source": "analysis/RAILWAY_TEST_DATA_ANALYSIS.md"
    }
  },
  "critical_warnings": [
    {
      "type": "data_incompatibility",
      "severity": "high",
      "message": "Existing Railway test data uses aggregated events (daily_activity). Affordance discovery requires granular event types.",
